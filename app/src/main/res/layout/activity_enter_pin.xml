<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F8F8F8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Security PIN"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your 4-digit PIN or use Biometric."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PIN"
        app:passwordToggleEnabled="true"
        app:boxBackgroundColor="#FFFFFF"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/etEnterPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="#333333"
            android:padding="16dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSubmitPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit PIN"
        android:backgroundTint="#4A90E2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/btnUseBiometric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Biometric"
        android:backgroundTint="#2E7D32"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

</LinearLayout>